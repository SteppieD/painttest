# Environment Variables

# AI API Keys (Required: at least one of GEMINI_API_KEY or OPENAI_API_KEY must be set)
GEMINI_API_KEY=                   # Get from Google AI Studio
OPENAI_API_KEY=                   # Get from OpenAI Platform

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=         # Your Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=    # Your Supabase anon/public key
SUPABASE_SERVICE_ROLE_KEY=        # Your Supabase service role key

# Note: After setting up Supabase:
# 1. Create a storage bucket named 'company-logos'
# 2. Set the following CORS configuration for the bucket:
